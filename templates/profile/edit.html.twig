{% extends "base.html.twig" %}

{% block title %}Modifier mon profil - BlogArt{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Modifier mon profil</h1>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.prenom) }}
                        {{ form_row(form.nom) }}
                        {{ form_row(form.bio) }}
                        {{ form_row(form.profileImage) }}
                        
                        <div class="d-grid gap-2">
                            {{ form_widget(form) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary mt-3">
                <i class="fas fa-arrow-left"></i> Retour au profil
            </a>
        </div>
    </div>
</div>
{% endblock %}
