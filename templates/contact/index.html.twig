{% extends "base.html.twig" %}

{% block title %}Formulaire de contact - BlogArt{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Nous contacter</h1>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.nom) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.sujet) }}
                        {{ form_row(form.message) }}
                        
                        <div class="d-grid gap-2">
                            {{ form_widget(form) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
