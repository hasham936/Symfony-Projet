{% extends "base.html.twig" %}

{% block title %}Accueil - FootMatch - Vente de Maillots de Football{% endblock %}

{% block body %}
<div class="container section">
    <div class="space-y-5">
        <h1>FootMatch</h1>
        <p class="text-gray text-large">Découvrez notre collection de maillots de football officiels</p>
        <a href="{{ path('app_maillots') }}" class="button-primary button-large">Voir tous les maillots</a>
    </div>

    {% if maillots %}
        <h2 class="space-y-4 space-t-2">Nos derniers maillots</h2>
        <div class="grid grid-2">
            {% for maillot in maillots %}
                <div class="grid-item">
                    <h5 class="item-title">{{ maillot.nom }}</h5>
                    <p class="item-subtitle text-small">{{ maillot.equipe }}</p>
                    <p class="item-description">{{ maillot.description|slice(0, 80) }}...</p>
                    <div class="item-footer">
                        <span class="item-price">{{ maillot.prix }}€</span>
                        <span class="item-stock">{{ maillot.taille }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="flex-center space-y-5 space-t-2">
            <a href="{{ path('app_maillots') }}" class="button-primary button-large">Voir toute notre collection</a>
        </div>
    {% else %}
        <p class="text-gray">Aucun maillot disponible pour le moment.</p>
    {% endif %}
</div>
{% endblock %}

