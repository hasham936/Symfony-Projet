{% extends "base.html.twig" %}

{% block title %}Mot de passe oublié - BlogArt{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body p-4">
                    <h2 class="card-title mb-4 text-center">Réinitialiser le mot de passe</h2>

                    <form method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Entrez votre email</label>
                            <input type="email" id="email" name="email" class="form-control" required>
                            <small class="form-text text-muted">
                                Nous vous enverrons un lien pour réinitialiser votre mot de passe.
                            </small>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">Envoyer le lien</button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <p class="text-center">
                        <a href="{{ path('app_login') }}">Retour à la connexion</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
